<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:MangosTEx.ViewModels">
    <ControlTemplate x:Key="ItemsGridTemplate">
        <DataGrid ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Setter Property="ToolTip"
                            Value="{Binding Error}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Error, Converter={StaticResource IsNullConverter}}"
                                     Value="False">
                            <Setter Property="Background" Value="Tomato" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                                    Width="Auto"
                                    Binding="{Binding DatabaseItem.Id}" />
                <DataGridTextColumn Header="Name"
                                    Width="1*"
                                    Binding="{Binding DatabaseItem.Name}" />
                <DataGridTextColumn Header="Description"
                                    Width="2*"
                                    Binding="{Binding DatabaseItem.Description}" />
                <DataGridTextColumn Header="Localized Name"
                                    Width="1*"
                                    Binding="{Binding TranslatedItem.Name}" />
                <DataGridTextColumn Header="Localized Description"
                                    Width="2*"
                                    Binding="{Binding TranslatedItem.Description}" />
            </DataGrid.Columns>
        </DataGrid>
    </ControlTemplate>

    <ControlTemplate x:Key="ItemsLoadingTemplate">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Loading items from database" />
            <TextBlock>
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource LoadingStoryboard}" />
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </StackPanel>
    </ControlTemplate>

    <Style x:Key="ItemsGridStyle"
           TargetType="Control">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Items.Count, Converter={StaticResource IsGreaterThanConverter}, ConverterParameter=0}"
                         Value="False">
                <Setter Property="Template"
                        Value="{StaticResource ItemsLoadingTemplate}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Items.Count, Converter={StaticResource IsGreaterThanConverter}, ConverterParameter=0}"
                         Value="True">
                <Setter Property="Template"
                        Value="{StaticResource ItemsGridTemplate}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <DataTemplate DataType="{x:Type vm:ItemLocalizationViewModel}">
        <Control Style="{StaticResource ItemsGridStyle}" />
    </DataTemplate>
</ResourceDictionary>
