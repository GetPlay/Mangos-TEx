<Window x:Class="MangosTEx.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		xmlns:viewModels="clr-namespace:MangosTEx.ViewModels"
        xmlns:converters="clr-namespace:MangosTEx.Converters"
        Title="Sample App"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600"
        >
    <Window.Resources>
        <viewModels:MainWindowViewModel x:Key="ViewModel" />
        <converters:IsNullConverter x:Key="IsNullConverter" />
        <Storyboard x:Key="LoadingStoryboard">
            <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text"
                                           Duration="0:0:4"
                                           RepeatBehavior="Forever">
                <DiscreteStringKeyFrame KeyTime="0:0:0"
                                        Value="" />
                <DiscreteStringKeyFrame KeyTime="0:0:1"
                                        Value="." />
                <DiscreteStringKeyFrame KeyTime="0:0:2"
                                        Value=".." />
                <DiscreteStringKeyFrame KeyTime="0:0:3"
                                        Value="..." />
            </StringAnimationUsingKeyFrames>
        </Storyboard>
        
        <ControlTemplate x:Key="ItemsGridTemplate">
            <DataGrid ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  >
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="ToolTip"
                            Value="{Binding Error}" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id"
                                    Width="Auto"
                                    Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Name"
                                    Width="1*"
                                    Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Description"
                                    Width="2*"
                                    Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Localized Name"
                                    Width="1*"
                                    Binding="{Binding LocalizedName}" />
                    <DataGridTextColumn Header="Localized Description"
                                    Width="2*"
                                    Binding="{Binding LocalizedDescription}" />
                </DataGrid.Columns>
            </DataGrid>
        </ControlTemplate>
        
        <ControlTemplate x:Key="ItemsLoadingTemplate">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Loading items" />
                <TextBlock>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource LoadingStoryboard}" />
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </StackPanel>
        </ControlTemplate>
        
        <Style x:Key="ItemsGridStyle"
               TargetType="Control">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Items, Converter={StaticResource IsNullConverter}}"
                                Value="True">
                    <Setter Property="Template"
                            Value="{StaticResource ItemsLoadingTemplate}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Items, Converter={StaticResource IsNullConverter}}"
                                Value="False">
                    <Setter Property="Template"
                            Value="{StaticResource ItemsGridTemplate}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid DataContext="{StaticResource ViewModel}">
        <Control Style="{StaticResource ItemsGridStyle}">
        </Control>
    </Grid>
</Window>
